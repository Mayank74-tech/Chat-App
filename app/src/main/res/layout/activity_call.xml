<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CallActivity">

    <!-- Remote video fills background -->
    <FrameLayout
        android:id="@+id/remote_video_view_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Local video preview in top-right -->
    <FrameLayout
        android:id="@+id/local_video_view_container"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        android:background="#222"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- End Call button -->
    <ImageButton
        android:id="@+id/btnEndCall"
        android:layout_width="58dp"
        android:layout_height="52dp"
        android:background="@android:color/holo_red_dark"
        android:src="@drawable/ic_end_call"
        android:contentDescription="End Call"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp" />

    <!-- Mute button on bottom-left -->
    <ImageView
        android:id="@+id/btnMute"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="8dp"
        app:srcCompat="@android:drawable/stat_notify_call_mute"
        android:contentDescription="Mute"
        android:background="#140D0D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="40dp" />

    <!-- Switch camera button on bottom-right -->
    <ImageView
        android:id="@+id/btnSwitch"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="8dp"
        android:background="#181414"
        app:srcCompat="@android:drawable/stat_notify_sync_noanim"
        android:contentDescription="Switch Camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
